<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net35;net40;net45;net451;net46;netstandard2.0;netstandard2.1;net5;net6</TargetFrameworks>
    <Version>0.5.0</Version>
    <Authors>zmjack</Authors>
    <Description>中文解析通用工具。包括拼音，简繁转换，数字读法，货币读法。</Description>
    <Copyright>Copyright © nstandard.net 2020-2022</Copyright>
    <PackageId>Chinese</PackageId>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/zmjack/Chinese</PackageProjectUrl>
    <PackageIcon>Chinese.png</PackageIcon>
    <RepositoryUrl>https://github.com/zmjack/Chinese</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Chinese Pinyin Number</PackageTags>
    <LangVersion>preview</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\Chinese.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NStandard" Version="0.9.4" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Microsoft.Extensions.Caching.Memory">
      <Version>6.0.1</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="Microsoft.Extensions.Caching.Memory">
      <Version>6.0.1</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net5'">
    <PackageReference Include="Microsoft.Extensions.Caching.Memory">
      <Version>6.0.1</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net6'">
    <PackageReference Include="Microsoft.Extensions.Caching.Memory">
      <Version>6.0.1</Version>
    </PackageReference>
  </ItemGroup>

</Project>
